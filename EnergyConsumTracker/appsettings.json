{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=EnergyConsumTrackerDb;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "CsvImportSettings": {
    "MaxFileSizeInMB": 10,
    "AllowedExtensions": [".csv"],
    "DefaultEncoding": "UTF-8"
  },
  "IoTDataSimulation": {
    "UpdateIntervalSeconds": 30,
    "EnableSimulation": true
  }
}
